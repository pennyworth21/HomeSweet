# API Configuration
REACT_APP_API_URL=https://api.inflow.example.com
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# Feature Flags
REACT_APP_ENABLE_AUTH=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_SEARCH=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Performance and Debugging
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=error

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=15728640  # 15MB in bytes
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.dwg
REACT_APP_MAX_FILES_PER_UPLOAD=10

# Cache Settings
REACT_APP_CACHE_DURATION=3600000  # 1 hour in milliseconds
REACT_APP_ENABLE_SERVICE_WORKER=true

# UI Configuration
REACT_APP_THEME=light
REACT_APP_LANGUAGE=en
REACT_APP_ITEMS_PER_PAGE=20

# Security
REACT_APP_JWT_EXPIRY=3600  # 1 hour in seconds
REACT_APP_REFRESH_TOKEN_EXPIRY=2592000  # 30 days in seconds
REACT_APP_ENABLE_CSRF=true

# Error Reporting
REACT_APP_ERROR_REPORTING=true
REACT_APP_ERROR_SAMPLING_RATE=0.1

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=false
REACT_APP_ENABLE_REACT_DEVTOOLS=false
REACT_APP_MOCK_API=false

# Analytics
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ANALYTICS_SAMPLING_RATE=1.0

# WebSocket Configuration
REACT_APP_WS_URL=wss://api.inflow.example.com/ws
REACT_APP_ENABLE_WS=true

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.inflow.example.com
REACT_APP_ASSETS_VERSION=${REACT_APP_VERSION}

# Security Headers
REACT_APP_CSP_ENABLED=true
REACT_APP_HSTS_ENABLED=true

# Rate Limiting
REACT_APP_RATE_LIMIT_REQUESTS=100
REACT_APP_RATE_LIMIT_INTERVAL=60000  # 1 minute in milliseconds

# Error Pages
REACT_APP_ERROR_PAGE_404=/404
REACT_APP_ERROR_PAGE_500=/500
REACT_APP_ERROR_PAGE_MAINTENANCE=/maintenance

# Monitoring
REACT_APP_ENABLE_ERROR_BOUNDARY=true
REACT_APP_ENABLE_PERFORMANCE_METRICS=true
REACT_APP_ENABLE_USER_TRACKING=true
